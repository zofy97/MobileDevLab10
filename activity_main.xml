<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityPart1">

    <TextView
        android:id="@+id/myText"
        android:layout_width="382dp"
        android:layout_height="407dp"
        android:text="The remote info that you retrieve will appear here"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/myUrl"
        android:layout_width="374dp"
        android:layout_height="48dp"
        android:text="Enter a URL here" />

    <Button
        android:id="@+id/button"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="Click to retrieve URL"
        app:layout_constraintTop_toBottomOf="@+id/myUrl" />

</android.support.constraint.ConstraintLayout>